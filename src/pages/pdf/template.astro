---
import type { ComponentProps } from 'astro/types';

import MainTemplate from '@/pdf/templates/main-template.astro';
import AccentColors from '@/styles/colors/accent/indigo.astro';
import DuskColors from '@/styles/colors/dusk/slate.astro';
import ElementColors from '@/styles/colors/elements/default.astro';
import Font from '@/styles/fonts/inter.astro';

const props: ComponentProps<typeof MainTemplate> = {
  context: {
    locale: 'enUS',
    translations: 'en',
    dateFormat: 'MMMM yyyy',
    website: '/template',
  },
  basics: 'main-pdf',
  footer:
    'I hereby give consent for my personal data included in my application to be processed for the purposes of the recruitment process.',
  sections: [
    {
      collection: 'skills',
      title: 'Skills',
      subsections: [
        {
          title: 'Technologies',
          withLevel: true,
          // prettier-ignore
          entries: ['cpp', 'stl', 'python', 'linux', 'jira', 'project_management'],
        },
        {
          title: 'Tools',
          entries: ['clion', 'vscode', 'gtest', 'cmake', 'git'],
        },
        {
          title: 'Languages',
          entries: ['polish', 'english'],
        },
      ],
    },
    {
      collection: 'jobs',
      title: 'Work',
      entries: ['nokia', 'huuugegames'],
    },
    {
      collection: 'projects',
      title: 'Projects',
      entries: ['taskplanner', 'spielda'],
    },
    {
      collection: 'education',
      title: 'Education',
      entries: ['bachelor'],
    },
    {
      collection: 'interests',
      title: 'Interests',
      entries: ['cooking', 'homelabbing', 'gaming', 'gamedev'],
    },
  ],
};
---

<MainTemplate {...props}>
  <Fragment slot="head">
    <Font />
    <DuskColors />
    <AccentColors />
    <ElementColors />
  </Fragment>
</MainTemplate>
